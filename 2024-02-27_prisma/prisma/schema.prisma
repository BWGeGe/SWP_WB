generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("../../prisma/dev.db")
}

model SpielKarte {
  id             String    @id @default(cuid())
  kartenName     String
  angriffspunkte Int
  lebenspunkte   Int
  bildUrl        String
  kartenTyp      KartenTyp @relation(fields: [kartenTypId], references: [id])
  kartenTypId    String    @map("kartentyp_id")
}

model KartenTyp {
  id                 String       @id @default(cuid())
  kartenTypName      String
  kartenTypSchwaeche String
  kartenTypBildUrl   String
  kartenTypFarbe     String
  SpielKarte         SpielKarte[]
}
