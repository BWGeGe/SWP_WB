generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model SpielKarte {
  id             String @id @default(cuid())
  kartenName     String
  angriffspunkte Int
  lebenspunkte   Int
  bildUrl        String
  kartenTyp      KartenTyp @relation(fields: [kartenTypId], references: [id]) 
  kartenTypId    String 
}

model KartenTyp {
  id                 String @id @default(cuid())
  kartenTypName      String
  kartenTypSchwaeche String
  kartenTypBildUrl   String
  kartenTypFarbe     String
  spielKarte         SpielKarte[]
}